extends _layout
block content
  - const hasRates = rates && rates.length === 2
  - const displayQuote = quote && quote.body.length < 250
  - const displayEuro = !displayQuote || quote && quote.body.length < 100
  .bg
  .info
    if hasRates
      h3.price.price--dollar
        span.curr $
        span.rate= Math.round(rates[1].rate)

    h1!= blockcount || '&nbsp;'

    if displayEuro
      h3.price.price--euro
        span.curr €
        span.rate= Math.round(rates[0].rate)

  if displayQuote
    blockquote
      p= quote.body
      if quote.author && quote.author.name
        p.author= `— ${quote.author.name}`
